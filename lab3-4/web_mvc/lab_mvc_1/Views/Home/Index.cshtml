@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <form action="Home/CheckLogin" id="formLogin" method="post">
        <table>
            <caption><h3>Login Form</h3></caption>
            <tr>
                <td>Username : </td>
                <td><input type="text" name="username" required id=""></td>
            </tr>
            <tr>
                <td>Password : </td>
                <td><input type="password" name="password" required id=""></td>
            </tr>
            
            <tr>
                <td><input type="submit" value="Submit"></td>
                <td><input type="reset" value="Reset"></td>
            </tr>
            <tr>
                <td><a asp-controller="Register" asp-action="Index">Create New Account</a></td>
            </tr>
        </table>
    </form>
</div>
